.chat-main
  .chat-main__group-info
    .group
      .group-name
        = @group.name
      .member-list
        Member : 
        - @group.users.each do |user|
          = user.name
    .edit-button
      = link_to edit_group_path(@group.id), class: "edit-btn" do
        Edit
  .chat-main__message-list
    = render @messages
  .chat-main__message-form
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .message-box
        = f.text_field :content, class: "textarea", placeholder: 'type a message'
        = f.label :image, class: 'image-form' do
          = icon('fas', 'image')
          = f.file_field :image, class: 'image-file'
      = f.submit 'Send', class: 'send-button'
    