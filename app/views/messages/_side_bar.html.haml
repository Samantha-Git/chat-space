
.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      .side-bar__user-name__top-items__name
        %h1.side-bar__userName
          = current_user.name
      .side-bar__user-name__top-items__icon
        = link_to new_group_path, class: "icon" do
          = icon('fas', 'edit')
        = link_to edit_user_path(current_user), class: "icon" do
          = icon('fas', 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group-name
            = group.name
          .group-chat
            = group.show_last_message

        


